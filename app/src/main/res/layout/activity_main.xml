<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:background="@color/lightBackground"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:theme="?attr/actionBarTheme"
    android:minHeight="?attr/actionBarSize"
    android:backgroundTint="@color/lightBackground"
    app:layout_constraintTop_toTopOf="parent" android:id="@+id/toolbar2">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/ic_menu"
        tools:layout_editor_absoluteY="4dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/imageButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sailec_bold"
        android:text="Overview"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:id="@+id/toolbar_title"/>

</androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="380dp"
        android:layout_height="693dp"
        android:background="#A3FFCE"
        android:backgroundTint="#40217A73"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp"
                tools:layout_editor_absoluteX="-176dp"
                tools:layout_editor_absoluteY="293dp" />

            <EditText
                android:id="@+id/fromText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#031B4E"
                android:ems="10"
                android:foregroundTint="#00000000"
                android:hint="From"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorLink="#00FFFFFF"
                android:autofillHints="" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp"
                tools:layout_editor_absoluteX="-176dp"
                tools:layout_editor_absoluteY="293dp" />

            <EditText
                android:id="@+id/toText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#031B4E"
                android:ems="10"
                android:foregroundTint="#00000000"
                android:hint="To "
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorLink="#00FFFFFF" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp"
                tools:layout_editor_absoluteX="-176dp"
                tools:layout_editor_absoluteY="293dp" />

            <Button
                android:id="@+id/findAirportsBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="#031B4E"
                android:text="Find Airports" />

            <Spinner
                android:id="@+id/departingSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#031B4E"
                android:backgroundTintMode="src_in"
                android:foregroundTint="#000000"
                android:outlineAmbientShadowColor="#000000"
                android:outlineSpotShadowColor="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp"
                tools:layout_editor_absoluteX="-176dp"
                tools:layout_editor_absoluteY="293dp" />

            <Spinner
                android:id="@+id/destinationSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#031B4E"
                android:backgroundTintMode="src_in" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp"
                tools:layout_editor_absoluteX="-176dp"
                tools:layout_editor_absoluteY="293dp" />

            <CalendarView
                android:id="@+id/departureCalendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#031B4E"
                android:focusedMonthDateColor="#000000"
                android:foregroundTint="#000000"
                android:foregroundTintMode="add"
                android:outlineSpotShadowColor="#000000"
                android:unfocusedMonthDateColor="#000000"
                android:weekNumberColor="#000000"
                android:weekSeparatorLineColor="#000000" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp"
                tools:layout_editor_absoluteX="-176dp"
                tools:layout_editor_absoluteY="293dp" />

            <CalendarView
                android:id="@+id/returnCalendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#031B4E" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp"
                tools:layout_editor_absoluteX="-176dp"
                tools:layout_editor_absoluteY="293dp" />

            <Button
                android:id="@+id/destinationBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="#031B4E"
                android:text="Find Flights" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"
                tools:layout_editor_absoluteX="-176dp"
                tools:layout_editor_absoluteY="293dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>