<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">


        <ImageView
            android:id="@+id/image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_airplane" />

        <TextView
            android:id="@+id/flight_time_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view"
            android:text="07:45 - 09:45"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/airportsID_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_time_view_1"
            android:layout_toEndOf="@id/image_view"
            android:text="MAD - BCN"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/travel_time_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_time_view_1"
            android:layout_marginStart="257dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@id/image_view"
            android:text="2h 25m"
            android:textColor="@android:color/black"

            android:textSize="18sp" />
        <TextView
            android:id="@+id/direct_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="257dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@id/image_view"
            android:text="Direct"
            android:textColor="@android:color/black"

            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image_view_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/image_view"
            android:src="@drawable/ic_airplane" />
        <TextView
            android:id="@+id/flight_time_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_2"
            android:layout_below="@+id/airportsID_view_1"
            android:layout_marginTop="16dp"
            android:text="07:45 - 09:45"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/airportsID_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_time_view_2"
            android:layout_toEndOf="@id/image_view"
            android:text="MAD - BCN"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/travel_time_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_time_view_2"
            android:layout_marginStart="257dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@id/image_view"
            android:text="2h 25m"
            android:textColor="@android:color/black"

            android:textSize="18sp" />
        <TextView
            android:id="@+id/direct_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/travel_time_view_2"
            android:layout_marginStart="257dp"
            android:layout_toEndOf="@id/image_view_2"
            android:text="Direct"
            android:textColor="@android:color/black"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/travel_time_view_2"
            android:layout_marginStart="310dp"

            android:layout_marginTop="32dp"
            android:text="$94.77"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="22dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>